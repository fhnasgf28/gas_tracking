<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_compute_purchase_duration" model="ir.actions.server">
            <field name="name">Compute Purchase Order Duration</field>
            <field name="model_id" ref="model_purchase_order"/>
            <field name="state">code</field>
            <field name="code">model.action_compute_duration()</field>
        </record>

        <record id="view_purchase_order_form_inherited" model="ir.ui.view">
            <field name="name">purchase.order.form.inherited</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="duration"/>
                    <field name="date_order"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
